                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/q"
                android:scaleType="fitCenter"
                android:contentDescription="天气" />

                   <!-- 温度范围 -->
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="8dp"
                       android:orientation="horizontal"
                       android:gravity="center_vertical">

                       <!-- 最低温度 -->
                       <TextView
                           android:id="@+id/forecast_day3_temp_low"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="2°"
                           android:textSize="12sp"
                           android:textColor="@color/widget_text_secondary"
                           android:textStyle="bold" />

                       <!-- 温度标尺容器 -->
                       <RelativeLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:layout_marginHorizontal="8dp">

                           <!-- 高温进度条（背景层） -->
                           <ProgressBar
                               android:id="@+id/forecast_day3_high_progress"
                               style="?android:attr/progressBarStyleHorizontal"
                               android:layout_width="match_parent"
                               android:layout_height="12dp"
                               android:max="100"
                               android:progress="0"
                               android:progressDrawable="@drawable/temp_high_progress" />

                           <!-- 低温进度条（前景层，显示在高温条前面） -->
                           <ProgressBar
                               android:id="@+id/forecast_day3_low_progress"
                               style="?android:attr/progressBarStyleHorizontal"
                               android:layout_width="match_parent"
                               android:layout_height="12dp"
                               android:layout_alignTop="@id/forecast_day3_high_progress"
                               android:layout_alignBottom="@id/forecast_day3_high_progress"
                               android:max="100"
                               android:progress="0"
                               android:progressDrawable="@drawable/temp_low_progress" />
                       </RelativeLayout>

                       <!-- 最高温度 -->
                       <TextView
                           android:id="@+id/forecast_day3_temp_high"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="13°"
                           android:textSize="12sp"
                           android:textColor="@color/widget_text_secondary"
                           android:textStyle="bold" />
                   </LinearLayout>
        </LinearLayout>

        <!-- 第4天 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="6dp"
            android:layout_marginBottom="4dp">

            <!-- 星期 -->
            <TextView
                android:id="@+id/forecast_day4_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周二"
                android:textSize="12sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold" />

            <!-- 天气图标 -->
            <ImageView
                android:id="@+id/forecast_day4_weather"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/q"
                android:scaleType="fitCenter"
                android:contentDescription="天气" />

            <!-- 温度范围 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 最低温度 -->
                <TextView
                    android:id="@+id/forecast_day4_temp_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3°"
                    android:textSize="12sp"
                    android:textColor="@color/widget_text_secondary"
                    android:textStyle="bold" />

                       <!-- 温度标尺容器 -->
                       <RelativeLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:layout_marginHorizontal="8dp">

                           <!-- 高温进度条（背景层） -->
                           <ProgressBar
                               android:id="@+id/forecast_day4_high_progress"
                               style="?android:attr/progressBarStyleHorizontal"
                               android:layout_width="match_parent"
                               android:layout_height="12dp"
                               android:max="100"
                               android:progress="0"
                               android:progressDrawable="@drawable/temp_high_progress" />

                           <!-- 低温进度条（前景层，显示在高温条前面） -->
                           <ProgressBar
                               android:id="@+id/forecast_day4_low_progress"
                               style="?android:attr/progressBarStyleHorizontal"
                               android:layout_width="match_parent"
                               android:layout_height="12dp"
                               android:layout_alignTop="@id/forecast_day4_high_progress"
                               android:layout_alignBottom="@id/forecast_day4_high_progress"
                               android:max="100"
                               android:progress="0"
                               android:progressDrawable="@drawable/temp_low_progress" />
                       </RelativeLayout>

                <!-- 最高温度 -->
                <TextView
                    android:id="@+id/forecast_day4_temp_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11°"
                    android:textSize="12sp"
                    android:textColor="@color/widget_text_secondary"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- 第5天 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp">

            <!-- 星期 -->
            <TextView
                android:id="@+id/forecast_day5_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周三"
                android:textSize="12sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold" />

            <!-- 天气图标 -->
            <ImageView
                android:id="@+id/forecast_day5_weather"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/dy"
                android:scaleType="fitCenter"
                android:contentDescription="天气" />

                   <!-- 温度范围 -->
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="8dp"
                       android:orientation="horizontal"
                       android:gravity="center_vertical">

                       <!-- 最低温度 -->
                       <TextView
                           android:id="@+id/forecast_day5_temp_low"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="6°"
                           android:textSize="12sp"
                           android:textColor="@color/widget_text_secondary"
                           android:textStyle="bold" />

                       <!-- 温度标尺容器 -->
                       <RelativeLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:layout_marginHorizontal="8dp">

                           <!-- 高温进度条（背景层） -->
                           <ProgressBar
                               android:id="@+id/forecast_day5_high_progress"
                               style="?android:attr/progressBarStyleHorizontal"
                               android:layout_width="match_parent"
                               android:layout_height="12dp"
                               android:max="100"
                               android:progress="0"
                               android:progressDrawable="@drawable/temp_high_progress" />

                           <!-- 低温进度条（前景层，显示在高温条前面） -->
                           <ProgressBar
                               android:id="@+id/forecast_day5_low_progress"
                               style="?android:attr/progressBarStyleHorizontal"
                               android:layout_width="match_parent"
                               android:layout_height="12dp"
                               android:layout_alignTop="@id/forecast_day5_high_progress"
                               android:layout_alignBottom="@id/forecast_day5_high_progress"
                               android:max="100"
                               android:progress="0"
                               android:progressDrawable="@drawable/temp_low_progress" />
                       </RelativeLayout>

                       <!-- 最高温度 -->
                       <TextView
                           android:id="@+id/forecast_day5_temp_high"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="16°"
                           android:textSize="12sp"
                           android:textColor="@color/widget_text_secondary"
                           android:textStyle="bold" />
                   </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>