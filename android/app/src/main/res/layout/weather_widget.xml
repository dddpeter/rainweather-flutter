<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <!-- 顶部区域：位置 + 当前温度 + 今日高低温度 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">

        <!-- 位置和日期信息（顶部一行） -->
        <LinearLayout
            android:id="@+id/text_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:gravity="start">

            <!-- 地点 -->
            <TextView
                android:id="@+id/text_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市朝阳区"
                android:textSize="14sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold" />

            <!-- 分隔符 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="·"
                android:textSize="14sp"
                android:textColor="@color/widget_text_secondary" />

            <!-- 公历日期和星期 -->
            <TextView
                android:id="@+id/text_gregorian_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10月24日 星期五"
                android:textSize="14sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold" />

            <!-- 分隔符 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="·"
                android:textSize="14sp"
                android:textColor="@color/widget_text_secondary" />

            <!-- 农历日期 -->
            <TextView
                android:id="@+id/text_lunar_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="八月二十"
                android:textSize="14sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 天气信息区域（左右布局） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_location"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 左侧：天气图标和温度 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/image_current_weather_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/dy"
                    android:scaleType="fitCenter"
                    android:contentDescription="当前天气" />

                <TextView
                    android:id="@+id/text_current_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="9°"
                    android:textSize="26sp"
                    android:textColor="@color/widget_temperature_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 右侧：天气文字、温度、空气质量 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <!-- 天气文字 -->
                <TextView
                    android:id="@+id/text_current_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多云"
                    android:textSize="16sp"
                    android:textColor="@color/widget_weather_color"
                    android:textStyle="bold" />

                <!-- 今日高低温度（一行） -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/text_today_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最高 13°"
                        android:textSize="12sp"
                        android:textColor="@color/widget_temperature_color"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_today_low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最低 4°"
                        android:textSize="12sp"
                        android:textColor="@color/widget_temperature_color"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 空气质量 -->
                <TextView
                    android:id="@+id/text_air_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="空气质量 优"
                    android:textSize="12sp"
                    android:textColor="@color/widget_air_quality_color"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- 生活提示 -->
    <TextView
        android:id="@+id/text_life_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="生活提示：建议穿薄外套，无需带伞"
        android:textSize="12sp"
        android:textColor="@color/widget_text_tertiary"
        android:textStyle="bold" />

    <!-- 24小时天气预报（中间区域） -->
